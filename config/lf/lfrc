set shell zsh
set ifs "\n"

# settings for previews
set sixel true
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

# basic settings
set hidden true
set ignorecase true
set icons false
set drawbox

# leave some space at the top and the bottom of the screen
set scrolloff 10

# use the `dim` attribute instead of underline for the cursor in the preview pane
set cursorpreviewfmt "\033[7;2m"

# unset default bindings
map d
map m

cmd open ${{
    case $(file --mime-type "$f" -bL) in
        text/*|application/json) nvim "$f";;
        application/x-executable) "$f";;
        *) xdg-open "$f" ;;
    esac
}}

# define a custom 'rename' command without prompt for overwrite
cmd rename %[ -e $1 ] && printf "file exists" || mv $f $1

# using trashy package for trash 
cmd trash ${{
  files=$(printf "$fx" | tr '\n' ';')
  while [ "$files" ]; do
    file=${files%%;*}

    trash put "$(basename "$file")"
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done
}}

# extract the current file with the right command
# (xkcd link: https://xkcd.com/1168/)
cmd extract ${{
    set -f
    case $f in
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
        *.tar.gz|*.tgz) tar xzvf $f;;
        *.tar.xz|*.txz) tar xJvf $f;;
        *.zip) unzip $f;;
        *.rar) unrar x $f;;
        *.7z) 7z x $f;;
    esac
}}

# compress current file or selected files with zip
cmd zip ${{
    set -f
    mkdir $1
    cp -r $fx $1
    zip -r $1.zip $1
    rm -rf $1
}}

# show the result of execution of previous commands
map ` !true

# execute current file (must be executable)
map e $$f
map E !$f

# open file via prompt to select program
map o $mimeopen --ask $f

# trash bindings
map dd trash
map du $trash restore -r 0
map dr $trash restore
map de $trash empty --all

# basic commands
map <enter> &mimeopen $f
map md :push %mkdir<space>
map mf :push %touch<space>
map r push :rename<space>
map x cut
map X extract
map Z zip

# movement
map ga cd ~/archive
map gb cd ~/.local/bin
map gc cd ~/.config
map gd cd ~/downloads
map gf cd ~/documents
map g. cd ~/dotfiles
map gh cd
map go cd ~/org
map gp cd ~/pictures
map gs cd ~/pictures/screenshots
map gt cd ~/.local/share/Trash/files
