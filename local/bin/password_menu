#!/bin/sh

passwords=$(find "$PASSWORD_STORE_DIR" -name "*.gpg" -printf "%f\n" | sed 's/\.gpg$//')

password=$(echo "$passwords" | sort | fuzzel -w 30 -di) || exit 0

pass -c "$password" >/dev/null 2>&1 && {
    notify-send "Copied $password" "Will clear in 45 seconds"
    password_copied=$(cliphist list | head -n1)
    (sleep 46 && echo "$password_copied" | cliphist delete) &
}
